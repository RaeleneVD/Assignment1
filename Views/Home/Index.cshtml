@{
    ViewBag.Title = "Home";
}

<!--Basics styling done-->
<style>
    #title {
        text-align: center;
        margin-top: 40px;
        font-size: 2.5rem;
        font-weight: bold;
        color: #2c3e50;
    }

    .row > div {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h1 {
        font-size: 1.5rem;
    }

    p {
        font-size: 1rem;
    }
</style>

<main class="container">
    <div class="row">
        <div class="col-12">
            <h1 id="title">Welcome To RescueBus 🚑🚑🚑</h1>  <!--Windows and . for smileys-->
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-4">
            <!--empty-->
        </div>

        <div class="col-md-4">
            <h1>Emergency?</h1>
            <p>Only hit the button for real emergencies, mind you...</p>
            <p>Stepping on a thumbtack at 3am while doing arts and crafts is not an emergency.</p>
        </div>

        <div class="col-md-4">
            <!--empty-->
        </div>
        <div class="col-md-4">
            <h1>A real O.K. team here to try and save you</h1>
            <p>If you are still breathing once you've reached the hospital, we've done our job successfully!</p>
            <button onclick="location.href='@Url.Action("SelectService", "Home")'" class="btn btn-primary btn-lg m-2">BOOK AMBULANCE</button>
        </div>

        <div class="col-md-4">
            <!--empty-->
        </div>

        <div class="col-md-4">
            <h1>S.O.S.</h1>
            <p>Click the SOS button to create an emergency booking.</p>
            <button onclick="createSOSBooking()" class="btn btn-danger btn-lg m-2">S.O.S.</button> <!--Create function that will fill oit the form. Take to booking confirmed-->
        </div>
    </div>
</main>

@section Scripts {
    <script>
        //Add createSOSBooking function here

        function createSOSBooking() {
            //Parse through local storage and find the drivers and vehicles that were added
            let drivers = JSON.parse(localStorage.getItem("drivers") || "[]");
            let vehicles = JSON.parse(localStorage.getItem("vehicles") || "[]");

            //error checking -->No drivers or vehicles found in local storage
            if (drivers.length === 0 || vehicles.length === 0) {
                alert("Please add drivers and vehicles in the Manage section first.");
                return;
            }

            //assign random driver and vehicle 
            let driver = drivers[Math.floor(Math.random() * drivers.length)];
            let vehicle = vehicles[Math.floor(Math.random() * vehicles.length)];

            //create booking object
            let booking = {
                id: crypto.randomUUID(),  //generate unique ID
                date: new Date().toLocaleString(),  //gets current date and time
                type: "S.O.S.",
                isSOS: true,
                driver: driver,
                vehicle: vehicle
            };

            //Save in local storage under bookings
            let bookings = JSON.parse(localStorage.getItem("bookings") || "[]");
            bookings.push(booking);
            localStorage.setItem("bookings", JSON.stringify(bookings));
            localStorage.setItem("latestBooking", JSON.stringify(booking));

            //go straight to booking comfirmed page
            location.href = '@Url.Action("BookingConfirmed", "Home")';
        }
    </script>
}
